  <div class="fs_grid_module">
      
<!-- USER/IMAGE BLOCK. ITERATE OVER USERS TO GET ALL USERS'S PHOTOS AND PLOP THEM IN THE DESIGN LAYOUT -->
<!-- WILL NEED FILTERING/PAGINATION -->
  <% @users.each do |user| %>

    <div class="grid_gallery-item">
      <div class="item_hover">
        <div class="item_hover-img">
          <%#= image_tag user.image_url %>
          <%= link_to image_tag(user.image_url, :class => "prettyPhoto"), user %>
            <div class="item_hover-fadder"></div>
              <!-- <a href="img/gallery/gallery_grid1-1.jpg" rel="prettyPhoto[gallery1]" class="prettyPhoto"></a> --><a href="portfolio_post.html" class="post_link"></a>
        </div>
        <div class="item_hover-body">
            <div class="item_hover-descr">
                <h3><%= link_to user.full_name, user %></h3>
                <%= user.location %>
            </div>
        </div>
      </div>
    </div>

  <% end %>
<!-- END USER IMAGE BLOCK -->

  <div class="clear"></div>
  </div><!-- .fs_grid_module -->
</div> <!-- .fullscreen_block -->   
