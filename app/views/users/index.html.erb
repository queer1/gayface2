<%= render "layouts/gallery" %>


<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Image url</th>
    <th>Sexuality</th>
    <th>City</th>
    <th>State</th>
    <th>Occupation</th>
    <th>Blurb</th>
    <th></th>
